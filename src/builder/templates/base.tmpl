<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {{ if .Website.HasStyle }}
        <link href="{{ .Website.Style }}" rel="stylesheet">
        {{ end }}
        <title>{{ .Website.Title }}</title>
    </head>
    <body>
        <header>
            <h1><a href="/">{{ .Website.Title }}</a></h1>
            <nav id="pages">
                <ul>{{ range .Website.Pages }}
                    <li><a href="{{ .Url }}">{{ .RenderHeader }}</a></li>
                </ul>{{ end }}
            </nav>
            <nav id="categories">
                <ul>{{ range .Website.Categories }}
                    <li><a href="{{ .Url }}">{{ .Name }}</a></li>
                </ul>{{ end }}
            </nav>
        </header>
        <main>
        {{ block "body" . }}
        {{ end }}
        </main>
    </body>
</html>
